extends layout.pug
  
block content
  h5.mt-3 Resources
  #resources.row
    .col-lg-6.mb-3#resourceTemplate
      .card
        .card-header.bg-primary
          a.text-light(
            href='/resource?id=' 
            data-type='resourceURL'
          )
            span.oi.oi-pencil
            | &nbsp;
            span(data-value='name')
          button.close.bg-danger.rounded(type='button')
            span.text-light(aria-hidden='true') &times;
        .progress
          .progress-bar.bg-warning(
            data-type='consumed'
            role='progressbar'
            style='width: 100%'
            aria-valuenow='100'
            aria-valuemin='0'
            aria-valuemax='100'
          )
        table.table.table-bordered.table-striped(style='margin-bottom: 0px')
          tr
            th(colspan=2 width="50%") Request
            th(colspan=2 width="50%") Response
          tr
            td Requested Amount:
            td.text-right(data-value='amount' data-format='NaNisInfinite,integer') 0
            td Used Amount:
            td.text-right.font-weight-bold(data-value='realAmount' data-format='integer') 0
          tr
            td Total Capacity:
            td.text-right(data-value='totalCapacity' data-format='NaNisInfinite,decimal,units') 0
            td Consumed:
            td.text-right.font-weight-bold(data-value='consumed' data-format='decimal,units') 0
          tr
            td Cost Per Unit:
            td.text-right(data-value='cost' data-format='money') 0
            td Total cost:
            td.text-right.font-weight-bold(data-value='finalCost' data-format='money') 0
    .col-lg-6.mb-3#resourceAddTemplate
      .card
        .card-header.bg-primary.text-light Add a new resource
        .card-body 
          p Resources are your stock of materials that will be spent when creating products.
          a.btn.btn-primary(href='/resource') Add a new resource

  h5 Products
  .row
    #products.col
      .row
        .col-lg-4#productInfoTemplate
          .card.mb-3
            .card-header.bg-success
              a.text-light(
                href='/resource?id=' 
                data-type='resourceURL'
              )
                span.oi.oi-pencil
                | &nbsp;
                span(data-value='name') Name
              button.close.bg-danger.rounded(type='button')
                span.text-light(aria-hidden='true') &times;
            table.table.table-bordered.table-striped(style='margin-bottom: 0px')
              tr
                td Requested Amount:
                td.text-right(data-value='amount' data-format='integer') 0
              tr.font-weight-bold
                td Used Amount:
                td.text-right(data-value='realAmount' data-format='integer') 0
              tr.font-weight-bold
                td Cost:
                td.text-right(data-value='cost' data-format='money') 0
              tr.font-weight-bold
                td Cost Per Product:
                td.text-right(data-value='costPerProduct' data-format='NaNisZero,money') 0
              tr.font-weight-bold
                td Price Per Product:
                td.text-right.bg-danger.text-light(data-value='pricePerProduct' data-format='NaNisZero,money') 0
        .col-lg-4#productComponentTemplate
          .card
            .card-header.bg-info.text-light(data-value='resource') name
            table.table.table-bordered.table-striped(style='margin-bottom: 0px')
              tr
                td Stage:
                td.text-right(data-value='stage') 0
              tr
                td Needs:
                td.text-right(data-value='amount' data-format='decimal,units') 0
              tr.font-weight-bold
                td Consumed:
                td.text-right(data-value='consumed' data-format='decimal,units') 0
              tr.font-weight-bold
                td Effective Consumption:
                td.text-right(data-value='consumedEffective' 
                  data-format='decimal,units') 0
              tr.font-weight-bold
                td Cost:
                td.text-right(data-value='cost' data-format='money') 0
      .row#productAddTemplate
        .col-lg-4
          .card
            .card-header.bg-success.text-light Add a new product
            .card-body 
              p Products describe your recipes to consume the predefined resources
              a.btn.btn-success(href='/product') Add a new product

  script(src='/assets/ui.js')

